@model IEnumerable<Rentflix.Models.Pelicula>

@{ ViewData["Title"] = "Index"; }

<style>
    img {
        border-radius: 50%;
        width: 220px;
        height: 220px;
        object-fit: contain;
    }
</style>



<h1>Peliculas</h1>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEstreno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        <h3>@Html.DisplayFor(modelItem => item.Nombre)</h3>
    </td>
    <td>
        <img src="@Url.Content(item.ImageURL)" alt="Sin imagen" />

    </td>
    <td>
        <h3>@{item.FechaEstreno.ToShortDateString();}</h3>
    </td>

    <td>
        <h3> @Html.DisplayFor(modelItem => item.Genero.Nombre)</h3>
    </td>

</tr>}
    </tbody>
</table>


@section Scripts{
    <script>$(document).ready(function () {
            $('#myTable').DataTable();
        });</script>
}
