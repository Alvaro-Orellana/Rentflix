@model IEnumerable<Rentflix.Models.Cliente>

@{ ViewData["Title"] = "Index"; }

<h1>Clientes</h1>


<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstaSubscrito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoMembresia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EstaSubscrito)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TipoMembresia.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.FechaNacimiento)
    </td>
    <td>
        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
    </td>
</tr>}
    </tbody>
</table>

<p>
    <a asp-action="Create">Crear nuevo cliente</a>
</p>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
